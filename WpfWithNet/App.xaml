                                    x:Name="CommonStates">
                                    <VisualState
                                        x:Name="Normal" />
                                    <VisualState
                                        x:Name="MouseOver">
                                        <Storyboard>
                                            <!--<ColorAnimation
                                                To="lightblue"
                                                Storyboard.TargetName="scbForBackGround"
                                                Duration="0:0:0.1"
                                                Storyboard.TargetProperty="Color"
                                                >
                                                
                                            </ColorAnimation>
                                            <ColorAnimation
                                                Duration="0:0:0.1"
                                                To="green"
                                                Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"
                                                Storyboard.TargetName="contentPanel" />-->
                                        </Storyboard>

                                    </VisualState>
                                    <VisualState
                                        x:Name="Pressed">
                                        <Storyboard>
                                            <!--<ColorAnimation
                                                To="lightblue"
                                                Storyboard.TargetName="scbForBackGround"
                                                Duration="0:0:0.1"
                                                Storyboard.TargetProperty="Color">
                                            </ColorAnimation>-->
                                        </Storyboard>

                                    </VisualState>
                                    <VisualState
                                        x:Name="Disabled">
                                        <Storyboard>

                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                                <VisualStateGroup
                                    x:Name="CheckStates">
                                    <VisualState
                                        x:Name="Checked">
                                        <Storyboard>
                                            <ColorAnimation
                                                To="{DynamicResource {x:Static SystemColors.MenuHighlightColorKey}}"
                                                Duration="0:0:0.1"
                                                Storyboard.TargetName="scbForBackGround"
                                                Storyboard.TargetProperty="Color">
                                            </ColorAnimation>
                                            <ColorAnimation
                                                Duration="0:0:0.1"
                                                To="white"
                                                Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)"
                                                Storyboard.TargetName="contentPanel" />
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState
                                        x:Name="Unchecked" />
                                    <VisualState
                                        x:Name="Indeterminate" />
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                        </BulletDecorator>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>

        </Style>
        <Style
            x:Key="borderStyle"
            TargetType="{x:Type Border}">
            <Setter
                Property="CornerRadius"
                Value="2" />
            <Setter
                Property="Background"
                Value="White" />
            <Setter
                Property="Margin"
                Value="0" />
            <Setter
                Property="BorderBrush"
                Value="LightGray" />
            <Setter
                Property="BorderThickness"
                Value="0" />
        </Style>
        <Style
            x:Key="lableStyle"
            TargetType="{x:Type Label}">
            <Setter
                Property="Background">
                <Setter.Value>
                    <SolidColorBrush
                        Color="{DynamicResource {x:Static SystemColors.MenuHighlightColorKey}}" />
                </Setter.Value>
            </Setter>
            <Setter
                Property="FontSize"
                Value="15" />
            <Setter
                Property="HorizontalContentAlignment"
                Value="Center" />
            <Setter
                Property="Foreground"
                Value="White" />
        </Style>
    </Application.Resources>
</Application>
